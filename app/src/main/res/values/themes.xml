<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Crypto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/black_transparent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimaryDark">@color/gray_for_radio_button</item>
        <item name="colorControlHighlight">@color/gray</item>
        <item name="colorControlNormal">@color/default_gray</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.Crypto.Holo.Light.ActionButton.Overflow</item>
    </style>

    <style name="Widget.Crypto.TextView.CoinPrice" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="Widget.Crypto.TextView.CoinSymbol" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Widget.Crypto.TextView.ItemCoinName" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="Widget.Crypto.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Crypto.TextView.CryptoToolBarText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Widget.Crypto.Holo.Light.ActionButton.Overflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_sort</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>

    <style name="Crypto.AlertDialogTheme" parent="MaterialAlertDialog.MaterialComponents.Title.Icon">
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Crypto.Alert.Button.Negative</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Crypto.Alert.Button.Positive</item>
        <item name="android:textColorPrimary">?attr/colorOnSecondary</item>
        <item name="android:colorControlActivated">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Crypto.Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorControlHighlight</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.Crypto.Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.Crypto.TextView.DetailsScreenPrice" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">36sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Widget.Crypto.TextView.DetailsScreenPriceChange" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Widget.Crypto.TextView.DetailsScreenMinAndMaxPrice" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Widget.Crypto.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/radio_flat_text_selector</item>
        <item name="android:background">@drawable/radio_flat_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SeparationLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?colorPrimaryDark</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="Widget.Crypto.TextView.DetailsScreenMarketCapLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="Widget.Crypto.TextView.DetailsScreenMarketCapValue" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="Widget.Crypto.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="itemTextColor">@color/radio_flat_text_selector</item>
        <item name="itemIconTint">@color/radio_flat_text_selector</item>
    </style>

    <style name="Widget.Crypto.TextView.NoInternetScreen" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

</resources>