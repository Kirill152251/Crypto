<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Crypto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <!-- Customize your theme here. -->
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="item_price_textView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="item_symbol_textView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="item_name_textView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="toolbar_style">
        <item name="android:background">@color/green</item>
    </style>

    <style name="toolbar_label_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/toolbar_sort_item</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorControlActivated">@color/green</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="details_screen_price_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">36sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="details_screen_price_change_text">
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="details_screen_max_and_min_price_text">
        <item name="android:textColor">@color/default_gray</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="details_screen_radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/radio_flat_text_selector</item>
        <item name="android:background">@drawable/radio_flat_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="separation_line_style_details_screen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_for_radio_button</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="market_cap_label_details_screen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="market_cap_value_details_screen">
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="bottom_menu_style">
        <item name="backgroundTint">@color/green</item>
        <item name="itemTextColor">@color/radio_flat_text_selector</item>
        <item name="itemIconTint">@color/radio_flat_text_selector</item>
    </style>

    <style name="text_input_settings">
        <item name="helperText">@string/text_helper</item>
        <item name="helperTextTextColor">@color/helper_text_color</item>
        <item name="marginHorizontal">16dp</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">20</item>
        <item name="endIconMode">clear_text</item>
    </style>
</resources>