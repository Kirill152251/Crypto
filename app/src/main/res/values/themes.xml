<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Crypto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/black_transparent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimaryDark">@color/gray_for_radio_button</item>
        <item name="colorControlHighlight">@color/gray</item>
        <item name="colorControlNormal">@color/default_gray</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.CoinPrice">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.CoinSymbol">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.ItemCoinName">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="Widget.MaterialComponents.Toolbar.Crypto">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.CryptoToolBarText">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/toolbar_sort_item</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>

    <style name="AlertDialogTheme" parent="MaterialAlertDialog.Material3">
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="android:textColorPrimary">?attr/colorOnSecondary</item>
        <item name="android:colorControlActivated">?attr/colorPrimary</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorControlHighlight</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.DetailsScreenPrice">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">36sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.DetailsScreenPriceChange">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.DetailsScreenMinAndMaxPrice">
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Widget.Material3.CompoundButton.RadioButton.Crypto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/radio_flat_text_selector</item>
        <item name="android:background">@drawable/radio_flat_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SeparationLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?colorPrimaryDark</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.DetailsScreenMarketCapLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.DetailsScreenMarketCapValue">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="Widget.MaterialComponents.BottomNavigationView.Crypto">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="itemTextColor">@color/radio_flat_text_selector</item>
        <item name="itemIconTint">@color/radio_flat_text_selector</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.NoInternetScreen">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

</resources>